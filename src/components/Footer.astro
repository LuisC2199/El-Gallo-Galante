---
const CATEGORIES = [
  { slug: "poesia", label: "Poesía" },
  { slug: "narrativa", label: "Narrativa" },
  { slug: "critica", label: "Crítica" },
  { slug: "ensayo", label: "Ensayo" },
  { slug: "epistolario", label: "Epistolario" },
] as const;

const year = new Date().getFullYear();
---

<footer class="bg-stone-50 border-t border-stone-100 py-20 px-6">
  <div class="max-w-6xl mx-auto flex flex-col md:flex-row justify-between items-start gap-12">
    <div class="max-w-sm">
      <h3 class="display-serif text-2xl font-bold mb-4">El Gallo Galante</h3>
      <p class="serif text-stone-500 leading-relaxed italic">
        Una plataforma para la pausa, la palabra y el encuentro literario. Desde el margen hacia el centro de la página.
      </p>
    </div>

    <div class="grid grid-cols-2 gap-16">
      <div>
        <h4 class="text-[10px] uppercase tracking-widest font-bold text-stone-400 mb-6">Mapa</h4>
        <div class="flex flex-col gap-3 items-start">
          {CATEGORIES.map((c) => (
            <a
              href={`/categoria/${c.slug}`}
              class="text-sm hover:text-stone-500 transition-colors"
            >
              {c.label}
            </a>
          ))}
          <a href="/contacto" class="text-sm hover:text-stone-500 transition-colors">
            Contáctanos
          </a>
        </div>
      </div>

      <div>
        <h4 class="text-[10px] uppercase tracking-widest font-bold text-stone-400 mb-6">Encuentro</h4>
        <div class="flex flex-col gap-3">
          <a class="text-sm text-stone-500 hover:text-stone-800 transition-colors" href="mailto:contacto@elgallogalante.com">
            contacto@elgallogalante.com
          </a>
          <div class="flex flex-col gap-2">
            <a class="text-sm text-stone-500 hover:text-stone-800 transition-colors" href="https://instagram.com/" target="_blank" rel="noreferrer">
              Instagram
            </a>
            <a class="text-sm text-stone-500 hover:text-stone-800 transition-colors" href="https://x.com/" target="_blank" rel="noreferrer">
              X (Twitter)
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-6xl mx-auto mt-20 pt-10 border-t border-stone-100 flex flex-col md:flex-row justify-between items-center gap-4">
    <p class="text-[10px] text-stone-400 uppercase tracking-widest">
      © {year} El Gallo Galante. Todos los derechos reservados.
    </p>
  </div>
</footer>